package week_two

object rationals {
  val x=new Rational(1, 3)                        //> x  : week_two#35.Rational#687269 = 1/3pippo
  val y=new Rational(5, 7)                        //> y  : week_two#35.Rational#687269 = 5/7pippo
  var z=new Rational(3, 2)                        //> z  : week_two#35.Rational#687269 = 3/2pippo
  x.sub(y).sub(z)                                 //> res0: week_two#35.Rational#687269 = -79/42pippo
}

class Rational(x: Int, y: Int){
	private def gcd(a: Int, b: Int):Int=if(b==0) a else gcd(b, a%b)
	val g=gcd(x, y)
	val numer=x
	val denom=y
	
	def neg=new Rational(-numer, denom)
	def add(that: Rational)=
		new Rational(
			numer*that.denom + that.numer * denom,
			denom * that.denom
		)
	def sub(that: Rational)=add(that.neg)
	override def toString=numer+"/"+denom+g
}
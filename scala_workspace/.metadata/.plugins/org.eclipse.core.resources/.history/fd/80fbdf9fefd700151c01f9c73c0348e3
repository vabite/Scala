package week_one

object tail_factorial {

	def factorial(n: Int):Int = {
	
	  def factorialIter(rest: Int, cum: Int): Int={
	  	if(rest==0) cum
	  	else factorialIter(rest-1, rest*cum)
	  }
	  	
	  factorialIter(n, 1)
	 }                                        //> factorial: (n: Int)Int
	 
	 factorial(0)                             //> res0: Int = 2
 }
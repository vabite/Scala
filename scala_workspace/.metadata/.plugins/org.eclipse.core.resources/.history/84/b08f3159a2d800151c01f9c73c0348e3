package week_two

object rationals {
  ("Welcome to the Scala worksheet")              //> res0: String#244("Welcome to the Scala worksheet") = Welcome to the Scala wor
                                                  //| ksheet
}

class Rational(x: Int, y: Int){
	def numer=x
	def denom=y
	
	def add(that: Rational)=
	new Rational(
		numer*that.denom + that.numer * denom,
		denom * that.denom
	)
}